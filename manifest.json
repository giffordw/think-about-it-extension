{
  "manifest_version": 3,
  "name": "Think About It",
  "version": "1.0",
  "description": "Helps you decide if you really need that product.",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["parsers/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}